@import 'module/_collapsible_navigation.less';
@import 'module/_footer.less';
@import 'module/_home.less';
@import 'module/_cms-pages.less';

//
//  Theme variables 
//  ____________________________ _________________

@header-border-color:#eff3f6;
//  Messages
@message-global-note__background: @color-yellow-light2;
@message-global-note__border-color: @color-yellow-light3;
@message-global-note__color: @text__color;

@message-global-note-link__color: @link__color;
@message-global-note-link__color-hover: @link__hover__color;
@message-global-note-link__color-active: @link__active__color;

@message-global-caution__background: @color-red9;
@message-global-caution__border-color: none;
@message-global-caution__color: @color-white;

@message-global-caution-link__color: @link__color;
@message-global-caution-link__color-hover: @link__hover__color;
@message-global-caution-link__color-active: @link__active__color;

//  Header
@header__background-color: false;
@header-icons-color: @theme-black;
@header-icons-color-hover: @theme-black;


@addto-color: @text__color__muted;
@addto-hover-color: @primary__color;

@minicart-icons-color: @header-icons-color;
@minicart-icons-color-hover: @header-icons-color-hover;

@button__shadow: inset 0 2px 1px rgba(0,0,0,.12);

@h1__margin-bottom__desktop: @indent__xl;

//  Footer
@footer__background-color: @theme-gray2;

//
//  Common
//  _____________________________________________

& when (@media-common = true) {


	#maincontent {
		>.page.messages { 
			position: fixed;
			z-index: 99999;
			top: 3rem;
			left: 0;
			right: 0;
			pointer-events: none;
			.messages{
				max-width:1280px;
				margin: 0 auto;
			}
			.message {
				transition: all .2s; 
				transition-timing-function: cubic-bezier(.4,0,.2,1);
				transform: translateY(-150px);
				position: relative;
				box-shadow: 0 4px 7px 0 fade(@color-black,9%);
				.text {
					font-size: 1.5rem;
					a {
						text-decoration: underline;
						color: @theme-green2;
					}
				}
			}
			.message.shown {
				opacity: 1;
				transform: translateY(0);
				pointer-events: all;
				animation: .3s ease-in-out 5s forwards message-hide;
				-moz-animation: 5s ease-in-out forwards moz-message-hide;
			}
			.action.close{
				font-style: normal;
				position: absolute;
				right: 15px;
				top: 11px;
				   .lib-icon-font(
				   @icon-close,
					@_icon-font-size: 20px,
					@_icon-font-line-height: 20px,
					@_icon-font-color: #166534,
					@_icon-font-position: before,
					@_icon-font-text-hide: true);			
			}
		}
	}

	@keyframes message-hide {
		100% {
			transform: translateY(-50px);
			opacity: 0;
			visibility: hidden
		}
	}

	@keyframes moz-message-hide {
		0% {
			transform: translateY(0)
		}

		93% {
			transform: translateY(0);
			opacity: 1;
			visibility: visible
		}

		100% {
			transform: translateY(-50px);
			opacity: 0;
			visibility: hidden
		}
	}

	@keyframes message-progress {
		0% {
			opacity: .5
		}

		100% {
			height: 0;
			opacity: .1
		}
	}

    body {
        .lib-css(background-color, @page__background-color);
    }

    .page-wrapper {
        .lib-vendor-prefix-display(flex);
        .lib-vendor-prefix-flex-direction(column);
        min-height: 100vh; // Stretch content area for sticky footer
    }

    .page-main {
        .lib-vendor-prefix-flex-grow(1);
    }

    //
    //  Header
    //  ---------------------------------------------
	div#store\.settings { 
		display:none;
	}
    .page-header {
        .lib-css(background-color, @header__background-color);
        border-bottom: 1px solid @border-color__base;
        margin-bottom: @indent__base;
    }

    .header {
        &.content {
            &:extend(.abs-add-clearfix all);
            padding-top: @indent__s;
            position: relative;
			  display: flex;
            align-items: center;
        
			    gap: 1rem;
        }
    }
	.icon.btn-heart {
		   .lib-icon-font(
		   @icon-wishlist-empty,
            @_icon-font-size: @header-icons-size,
             @_icon-font-line-height: @header-icons-line-height,
                    @_icon-font-color: @header-icons-color,
                    @_icon-font-color-hover: @header-icons-color,
                    @_icon-font-color-active: @header-icons-color,
                    @_icon-font-position: before,
                    @_icon-font-text-hide: true);
	}
	.fa-brands {
	    font-style: normal;
	
		   .lib-icon-font(
		   @icon-wishlist-empty,
            @_icon-font-size: @header-icons-size,
            @_icon-font-line-height: @header-icons-line-height,
            @_icon-font-color: @theme-purple,
            @_icon-font-color-hover: @theme-purple,
            @_icon-font-color-active: @theme-purple,
            @_icon-font-position: before,
            @_icon-font-text-hide: true);
			&.fa-facebook {
			.lib-icon-font-symbol(
                @_icon-font-content: @icon-fb
                );
			

			}
			&.fa-twitter {
				.lib-icon-font-symbol(
                @_icon-font-content: @icon-twiter-x);
			}
			&.fa-instagram {
				.lib-icon-font-symbol(
                @_icon-font-content: @icon-instagram);
			}
			&.fa-pinterest {
				.lib-icon-font-symbol(
                @_icon-font-content: @icon-pintrest);
			}
					
	}
	input[type="number"]::-webkit-inner-spin-button,
	input[type="number"]::-webkit-outer-spin-button {
		-webkit-appearance: textfield;
		margin: 0;
	}
	.breadcrumbs {
		.home {
		    position: relative;
			margin-bottom: 10px;
			a {
				.lib-icon-font(
				@icon-home,
				@_icon-font-size: @header-icons-size,
				@_icon-font-line-height: @header-icons-line-height,
				@_icon-font-color: @theme-purple,
				@_icon-font-color-hover: @theme-purple,
				@_icon-font-color-active: @theme-purple,
				@_icon-font-position: before,
				@_icon-font-text-hide: true);
				&:before {
					position: absolute;
					top: -17px;
				
				}
				position: relative;
				font-size: 0px;
				
			}
			&:after {
			   margin-left: 18px !important;
			}
		}
	
	}

	
	
    .logo {
        float: left;
        margin: 0 0 @indent__s @indent__xl;
        max-width: 50%;
        position: relative;
        z-index: 5;

        img {
            display: block;
            height: auto;
        }

        .page-print & {
            float: none;
        }
    }

    .page-main {
        > .page-title-wrapper {
            .page-title + .action {
                margin-top: @indent__l;
            }
        }
    }

    .action.skip {
        &:not(:focus) {
            &:extend(.abs-visually-hidden all);
        }

        &:focus {
            .lib-css(background, @color-gray94);
            .lib-css(padding, @indent__s);
            box-sizing: border-box;
            left: 0;
            position: absolute;
            text-align: center;
            top: 0;
            width: 100%;
            z-index: 15;
        }
    }

    .action-skip-wrapper {
        height: 0;
        position: relative;
    }
	.block.block-search+ul.header.links,#switcher-currency+ul.header.links {
		margin: 0;
		padding: 0;
		.customer-welcome {
			margin: 0;
		}
	}
	
	.customer-welcome {
	    margin: 0;
        .lib-dropdown(
        @_toggle-selector: ~'.action.switch',
        @_options-selector: ~'ul',
        @_dropdown-actions-padding: 0,
        @_dropdown-list-item-padding: 0,
        @_dropdown-toggle-icon-content: @icon-user,
        @_dropdown-toggle-active-icon-content: @icon-user,
        @_icon-font-text-hide: true,
      
		@_icon-font-size: @header-icons-size,
        @_icon-font-line-height: @header-icons-line-height,
        @_dropdown-list-pointer-position: right,
        @_dropdown-list-position-right: 0,
        @_dropdown-list-z-index: 99
        );

        li:extend(.switcher li all) {
            a {
                .lib-link(
                @_link-color: @color-gray20,
                @_link-text-decoration: none,
                @_link-color-visited: @color-gray20,
                @_link-text-decoration-visited: none,
                @_link-color-hover: @color-gray20,
                @_link-text-decoration-hover: none,
                @_link-color-active: @color-gray20,
                @_link-text-decoration-active: none
                );
                display: block;
                line-height: 1.4;
                padding: 8px;
            }
        }

        .customer-name {
            cursor: pointer;
        }

        .customer-menu {
            display: none;
        }

        .action.switch {
            .lib-button-reset();
            .lib-css(color, @header-icons-color);
        }

        .header.links {
            min-width: 175px;
            z-index: 1000;
        }

        &.active {
            .action.switch {
                .lib-icon-font-symbol(
                @_icon-font-content: @icon-user,
                @_icon-font-position: after
                );
            }

            .customer-menu {
                display: block;
            }
        }

        .greet {
            display: none;
        }
    }

    //
    //  Global notice
    //  ---------------------------------------------

    .message.global {
        p {
            margin: 0;
        }

        &.noscript,
        &.cookie {
            .lib-message(@_message-type: global-note);
            margin: 0;
        }

        &.cookie {
            bottom: 0;
            left: 0;
            position: fixed;
            right: 0;
            z-index: 3;

            .actions {
                margin-top: @indent__s;
            }
        }

        &.demo {
            .lib-message(@_message-type: global-caution);
            margin-bottom: 0;
            text-align: center;
        }
    }

    //
    //  Footer
    //  ---------------------------------------------

    .page-footer {
        .lib-css(background-color, @footer__background-color);
        margin-top: auto;
		padding-top:20px;
    }

    .footer {
        &.content {
            border-top: 1px solid @border-color__base;
            margin-top: 25px;
            padding-bottom: 25px;
            padding-top: 25px;

            ul {
                &:extend(.abs-reset-list all);
            }

            .links {
                > li {
                    margin: 0 0 8px;
                }
            }

            .switcher-store {
                margin: 0 0 30px;
            }
        }

        .copyright,
        .bugs {
            display: block;
            margin: 20px 0 0;
        }
    }

    .page-header,
    .page-footer {
        .switcher {
            
			color:@theme-black;
			
            .options {
                .lib-dropdown(
                @_dropdown-actions-padding: 0,
                @_dropdown-list-item-padding: @dropdown-list-item__padding,
                @_dropdown-toggle-icon-content: @icon-chevron-bottom,
                @_dropdown-toggle-active-icon-content: @icon-chevron-top,
                @_icon-font-text-hide: true,
                @_icon-font-size: 22px,
                @_icon-font-line-height: 34px,
                @_dropdown-list-min-width: 160px
                );

                ul.dropdown {
                    a {
                        display: flex;
						align-items: center;
						gap: 10px;
                        padding: @default-padding;
						border-radius: @default-border-radius;
						color: @theme-black;

                        &:hover {
                            text-decoration: none;
                        }
                    }
                }
            }

            li {
                font-size: @font-size__s;
                margin: 0;
            }

            .label {
                &:extend(.abs-visually-hidden all);
            }

            strong {
                font-weight: @font-weight__heavier;
            }
        }
    }

    //
    //  Widgets
    //  ---------------------------------------------

    .sidebar {
        .widget.block:not(:last-child),
        .widget:not(:last-child) {
            &:extend(.abs-margin-for-blocks-and-widgets all);
        }
    }

    .widget {
        clear: both;

        .block-title {
            &:extend(.abs-block-title all);
        }
    }

    .page-header,
    .page-footer {
        .widget.block {
            .lib-css(margin, @indent__base 0);
        }
    }

    .no-display {
        &:extend(.abs-no-display all);
    }

    //
    //  Calendar
    //  ---------------------------------------------

    .ui-datepicker {
        td {
            padding: 0;
        }
    }

    .cookie-status-message {
        display: none;
    }
	
	@media only screen and (max-width:1243px) and (min-width:770px) {
	
		.sections.nav-sections {
			order: 1;
			width: 100%;
		}
		.header.content {
          
            flex-wrap: wrap;
			    justify-content: space-between;
        }
		        .block-search {
          
            min-width: 50%;
        }
	}
	.minicart-wrapper.active {
		div#minicart-content-wrapper {
			.items-total {
				display: contents;
			}
			.subtotal { 
				display: flex;
				justify-content: space-between;
				margin: 1rem 0 !important;
				font-weight: 500;
			}
		}
	}
	.page.messages .message.success {
		background: #bbf7d0;
		padding: 12.5px 21px;
		text-align: center;
		a { 
			color: @color-black;
			&:hover {
				color: @color-black;
			}
		}
		*:first-child:before {
			top: 21px;
		}
	}

}


//
//  Mobile
//  _____________________________________________

.media-width(@extremum, @break) when (@extremum = 'max') and (@break = @screen__m) {
	.logo {
	   
		flex: 1 1 auto;
	}
	.link.wishlist {
		display: none;
	}
	.header.content {
		
		justify-content: flex-end;
	}
	.block-search+div#switcher-currency{
	display: none;
	}
	#maincontent {
		>.page.messages {
			.message {	
				.text {
					padding: 0 20px !important;
				}
			}
		}
	}
}  

//
//  Desktop
//  _____________________________________________

.media-width(@extremum, @break) when (@extremum = 'min') and (@break = @screen__m) {
    .page-wrapper {
        > .breadcrumbs,
        > .top-container,
        > .widget {
            box-sizing: border-box;
            width: 100%;
        }
    }

    .navigation ul {
        padding: 0 8px;
    }

    .header {
       
            > .header.links {
               padding:0;
			   margin:0;
              
               
              

                > li {
                    font-size: @font-size__base;
                    margin:0;

                    &.welcome,
                    a {
                        line-height: 1.4;
                    }

                    &.welcome {
                        a {
                            .lib-css(padding-left, @indent__xs);
                        }
                    }
                }
            }
       

        &.content {
            &:extend(.abs-add-clearfix-desktop all);
             padding: 0 20px;
          
        }
    }

    .page-header {
       // border: 2px solid @header-border-color;
	  
        margin-bottom: 20px;
		.cms-index-index &{
			margin-bottom: 0;
		}
        .panel.wrapper {
            border-bottom: 1px solid @secondary__color;
			background: @theme-blue;
			color: @theme-white-fade;
        }

        .header.panel {
            &:extend(.abs-add-clearfix-desktop all);
            padding-bottom: @indent__s;
            padding-top: @indent__s;
        }

        .switcher {
            display: inline-block;
        }
    }

    .page-main {
        > .page-title-wrapper {
            .page-title {
                display: inline-block;
            }

            .page-title + .action {
                float: right;
                margin-top: @indent__base;
            }
        }
    }

    .logo {
        margin: 0;

        img {
            max-height: inherit;
        }
    }

    .footer {
        &.content {
            .block {
                float: right;
            }

            .links {
                display: inline-block;
                margin-bottom: 20px;
                padding: 0 50px 0 0;
                vertical-align: top;
            }

            .switcher.store {
                display: inline-block;
                padding-right: 50px;
                vertical-align: top;
            }
        }

        .copyright {
            &:extend(.abs-add-clearfix all);
        }
    }
}

@media only screen and (max-width: 858px) and (min-width: 676px) {
    .header.content {
        .block-search {
            min-width: 44%;
        }
    }
    
}