				const observer = new MutationObserver((mutations, observer) => {
					const swatchOptions = document.querySelectorAll(
						"#product-options-wrapper .swatch-opt .swatch-option.color, " +
						"#product-options-wrapper .swatch-opt .swatch-option.image"
					);
		 
					if (swatchOptions.length > 0) {
